{
  "author": "wkk",
  "name": "抢购助手 - 辅助点击",
  "description": "抢购助手，辅助快速点击抢购按钮",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "抢购助手",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "externally_connectable": {
    "ids": ["*"],
    "matches": ["*://*/*"],
    "accepts_tls_channel_id": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs", "activeTab", "storage", "notifications",
    "webNavigation",
    "storage",
    "contextMenus",
    "<all_urls>",
    "*://*/*"
  ]
}